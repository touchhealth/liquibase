	<!-- Repositórios -->
	<repositories>
		<repository>
			<id>touch-releases</id>
			<url>http://maven.touchtec.com.br/artifactory/releases</url>
		</repository>
		<repository>
			<id>touch-snapshots</id>
			<url>http://maven.touchtec.com.br/artifactory/snapshots</url>
		</repository>
	</repositories>

	<!-- Controle de versão -->
	<scm>
		<connection>scm:cvs:pserver:@cvs.touchtec.com.br:/opt/CVS/root:m2/liquibase-parent</connection>
		<developerConnection>scm:cvs:pserver:@cvs.touchtec.com.br:/opt/CVS/root:m2/liquibase-parent</developerConnection>
		<url>http://cvs.touchtec.com.br/viewvc/m2/liquibase-parent</url>
		<!-- <connection>scm:git:git@github.com:liquibase/liquibase.git</connection> -->
		<!-- <url>scm:git:git@github.com:liquibase/liquibase.git</url> -->
		<!-- <developerConnection>scm:git:git@github.com:liquibase/liquibase.git</developerConnection> -->
	</scm>

	<!-- Profiles -->
	<profiles>
		<profile>
			<id>release-sign-artifacts</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<!-- Properties -->
	<properties>
		<maven.build.timestamp.format>E MMM dd hh:mm:ss zzz yyyy</maven.build.timestamp.format>
		<build.timestamp>${maven.build.timestamp}</build.timestamp>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

</project>
